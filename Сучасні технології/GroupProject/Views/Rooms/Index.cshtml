@model PaginatedList<GroupProject.Models.HotelRoom>

@{
    ViewData["Title"] = "Список номерів";
}

<h1>Список номерів</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Номер кімнати</th>
            <th>Назва</th>
            <th>Опис</th>
            <th>Ціна за ніч</th>
            <th>Місткість</th>
            <th>Доступність</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.Name</td>
                <td>@room.Description</td>
                <td>@room.PricePerNight ₴</td>
                <td>@room.Capacity</td>
                <td>@(room.IsAvailable ? "Так" : "Ні")</td>
                <td>
                    <a class="btn btn-primary" asp-action="Book" asp-route-id="@room.Id">Забронювати</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Пагінація -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)">Попередня</a>
            </li>
        }
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageIndex="@i">@i</a>
            </li>
        }
        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)">Наступна</a>
            </li>
        }
    </ul>
</nav>
