@{
    ViewData["Title"] = "Вхід";
}
<h2>Вхід</h2>

<form method="post" asp-action="Login">
    <label>Email:</label>
    <input type="email" name="email" required />
    <br />
    <label>Пароль:</label>
    <input type="password" name="password" required />
    <br />
    <button type="submit">Увійти</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
