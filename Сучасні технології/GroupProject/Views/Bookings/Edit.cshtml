@model GroupProject.Models.Booking

@{
    ViewData["Title"] = "Редагування бронювання";
}

<h1>Редагування бронювання</h1>

@using (Html.BeginForm("Edit", "Bookings", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.HotelRoomId)

    <div class="form-group">
        @Html.LabelFor(model => model.GuestName)
        @Html.TextBoxFor(model => model.GuestName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.GuestName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GuestEmail)
        @Html.TextBoxFor(model => model.GuestEmail, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.GuestEmail, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CheckInDate)
        @Html.TextBoxFor(model => model.CheckInDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.CheckInDate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CheckOutDate)
        @Html.TextBoxFor(model => model.CheckOutDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.CheckOutDate, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
}
