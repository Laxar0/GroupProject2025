@model PaginatedList<GroupProject.Models.Booking>

@{
    ViewData["Title"] = "Список бронювань";
}

<h2>Список бронювань</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Гість</th>
            <th>Email</th>
            <th>Номер</th>
            <th>Дата заїзду</th>
            <th>Дата виїзду</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.GuestName</td>
                <td>@booking.GuestEmail</td>
                <td>@booking.HotelRoom?.Name</td>
                <td>@booking.CheckInDate.ToShortDateString()</td>
                <td>@booking.CheckOutDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@booking.Id">Редагувати</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@booking.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    @if (Model.HasPreviousPage)
    {
        <a asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)" class="btn btn-primary">Попередня</a>
    }
    @if (Model.HasNextPage)
    {
        <a asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)" class="btn btn-primary">Наступна</a>
    }
</div>

<style>
    .pagination {
        margin-top: 20px;
    }
    .pagination a {
        margin-right: 10px;
    }
</style>